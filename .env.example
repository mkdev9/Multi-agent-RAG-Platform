# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://rag_user:rag_password@localhost:5432/rag_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Vector Database Configuration
VECTOR_DB_PROVIDER=chroma
CHROMA_PATH=./data/chroma
CHROMA_HOST=
CHROMA_PORT=8001
VECTOR_COLLECTION_NAME=knowledge_base

# LLM Provider Configuration
LLM_DEFAULT_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Azure OpenAI
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_VERSION=2023-12-01-preview

# AWS Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Authentication
AUTH_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
AUTH_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# File Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./data/files

# AWS S3 (if using S3 storage)
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_REGION=us-east-1

# Azure Blob (if using Azure storage)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER=your_container

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=false
JAEGER_ENDPOINT=